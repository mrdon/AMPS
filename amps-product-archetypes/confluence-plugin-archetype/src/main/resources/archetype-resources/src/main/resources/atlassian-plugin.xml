#set( $dollar = '$' )
<atlassian-plugin key="${dollar}{project.groupId}.${dollar}{project.artifactId}" name="${dollar}{project.name}" plugins-version="2"
      xmlns="http://www.atlassian.com/schema/plugins"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.atlassian.com/schema/plugins
          http://schema.atlassian.com/confluence/confluence-3.5.xsd">
    <plugin-info>
        <description>${dollar}{project.description}</description>
        <version>${dollar}{project.version}</version>
        <vendor name="${dollar}{project.organization.name}" url="${dollar}{project.organization.url}" />
    </plugin-info>

    <macro name="${artifactId}" class="${package}.ExampleMacro" key="my-macro">
    <!-- TODO: Add macro description -->
    <!-- <description></description> -->
    </macro>
</atlassian-plugin>
