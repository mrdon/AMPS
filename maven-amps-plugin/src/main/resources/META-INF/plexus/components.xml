<component-set>
    <components>
        <component>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>atlassian-plugin</role-hint>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <phases>
                            <generate-resources>
                                com.atlassian.maven.plugins:maven-amps-unicorn-plugin:copy-bundled-dependencies
                            </generate-resources>
                            <process-resources>
                                com.atlassian.maven.plugins:maven-amps-unicorn-plugin:compress-resources,
                                org.apache.maven.plugins:maven-resources-plugin:resources,
                                com.atlassian.maven.plugins:maven-amps-unicorn-plugin:filter-plugin-descriptor
                            </process-resources>
                            <compile>org.apache.maven.plugins:maven-compiler-plugin:compile</compile>
                            <process-classes>
                                com.atlassian.maven.plugins:maven-amps-unicorn-plugin:generate-manifest,
                                com.atlassian.maven.plugins:maven-amps-unicorn-plugin:generate-rest-docs
                            </process-classes>
                            <process-test-resources>org.apache.maven.plugins:maven-resources-plugin:testResources</process-test-resources>
                            <test-compile>org.apache.maven.plugins:maven-compiler-plugin:testCompile</test-compile>
                            <test>com.atlassian.maven.plugins:maven-amps-unicorn-plugin:unit-test</test>
                            <package>
                                com.atlassian.maven.plugins:maven-amps-unicorn-plugin:validate-manifest,
                                com.atlassian.maven.plugins:maven-amps-unicorn-plugin:jar,
                                com.atlassian.maven.plugins:maven-amps-unicorn-plugin:generate-obr-artifact,
                                com.atlassian.maven.plugins:maven-amps-unicorn-plugin:test-jar
                            </package>
                            <integration-test>
                                com.atlassian.maven.plugins:maven-amps-unicorn-plugin:integration-test
                            </integration-test>
                            <install>org.apache.maven.plugins:maven-install-plugin:install</install>
                            <deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
                        </phases>
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
        <component>
            <role>org.codehaus.plexus.components.interactivity.Prompter</role>
            <role-hint>pretty-prompter</role-hint>
            <implementation>com.atlassian.maven.plugins.amps.codegen.prompter.PrettyPrompter</implementation>
            <requirements>
                <requirement>
                    <role>org.codehaus.plexus.components.interactivity.OutputHandler</role>
                    <field-name>outputHandler</field-name>
                </requirement>
                <requirement>
                    <role>org.codehaus.plexus.components.interactivity.InputHandler</role>
                    <field-name>inputHandler</field-name>
                </requirement>
            </requirements>
        </component>
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>atlassian-plugin</role-hint>
            <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
            <configuration>
                <type>atlassian-plugin</type>
                <includesDependencies>true</includesDependencies>
                <language>java</language>
                <extension>jar</extension>
                <addedToClasspath>true</addedToClasspath>
            </configuration>
        </component>
        <component>
            <role>com.atlassian.maven.plugins.amps.codegen.PluginModuleSelectionQueryer</role>
            <role-hint>plugin module selector</role-hint>
            <implementation>com.atlassian.maven.plugins.amps.codegen.DefaultPluginModuleSelectionQueryer</implementation>
            <requirements>
                <requirement>
                    <role>org.codehaus.plexus.components.interactivity.Prompter</role>
                    <field-name>prompter</field-name>
                </requirement>
            </requirements>
        </component>

        <component>
            <role>com.atlassian.plugins.codegen.modules.PluginModuleCreatorFactory</role>
            <role-hint>plugin module creator factory</role-hint>
            <implementation>com.atlassian.plugins.codegen.PluginModuleCreatorFactoryImpl</implementation>
        </component>

        <component>
            <role>com.atlassian.maven.plugins.amps.codegen.prompter.PluginModulePrompterFactory</role>
            <role-hint>product module prompter factory</role-hint>
            <implementation>com.atlassian.maven.plugins.amps.codegen.prompter.PluginModulePrompterFactoryImpl</implementation>
            <requirements>
                <requirement>
                    <role>org.codehaus.plexus.components.interactivity.Prompter</role>
                    <field-name>prompter</field-name>
                </requirement>
            </requirements>
        </component>
    </components>
</component-set>
